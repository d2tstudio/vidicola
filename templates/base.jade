doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')          
    
    block title
      title Inedicola

    block styles
      link(rel='stylesheet/less', href='{{STATIC_URL}}/styles.less')

    block scripts
      script(src='{{STATIC_URL}}/js/less.min.js', type='text/javascript')
      script(src='{{STATIC_URL}}/js/jquery-1.11.3.min.js', type='text/javascript')
      script(src='{{STATIC_URL}}/js/bootstrap.min.js', type='text/javascript')
      

  body
    .container
      block navbar
        // Static navbar
        .navbar.navbar-inverse.navbar-transparent(role='navigation')
          .container
            .navbar-header
              a.navbar-brand(href='/')
                img.testata-logo.small(src="{{STATIC_URL}}/img/logo.svg", onerror="this.src='{{STATIC_URL}}/img/logo.png'")
            .navbar-collapse.collapse
              ul.nav.navbar-nav.navbar-right
                li
                  a.btn.btn-outline(type="button", data-toggle="modal", data-target=".qn-account") Accedi 
            // /.nav-collapse
        // /container    
    
    block main
      h1.title Index (default)
      #container
        if name
          p Hello #{name}
        else
          p Hello World

    .container
      block footer
          .footer
            ol.breadcrumb
              li
                a(href="assistenza") Assistenza & Faq
              li
                a(href="azienda") Aziende
              li
                a(href="guida") Guida

    .tab-content
      .qn-account.qn.modal.fade
          .modal-dialog
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true') ×
              .modal-body
                .container-fluid
                  .row.nomargin
                    .col-md-6
                      h2 
                        img.testata-logo.small(src="{{STATIC_URL}}/img/logo.svg",onerror="this.src='{{STATIC_URL}}/img/logo.png'")
                    .col-md-6
                      h2 
                        img.testata-logo.small(src="{{STATIC_URL}}/img/qn_white.svg", onerror="this.src='{{STATIC_URL}}/img/qn_white.png'")
                  .row
                    .col-md-12
                      p.quiet Accedi a InEdicola con il tuo account di Quotidiano.net
                  .row
                    .col-md-8.col-md-offset-2
                      p msg area
                      form
                        .form-group
                          label.sr-only(for='exampleInputEmail1') Email address
                          input#exampleInputEmail1.form-control(type='email', placeholder='Enter email')
                        .form-group
                          label.sr-only(for='exampleInputPassword1') Password
                          input#exampleInputPassword1.form-control(type='password', placeholder='Password')
                        a.btn.btn-primary.btn-block(type='submit', href="/account") Accedi
                        button.btn.btn-link.btn-block.quiet(type='button') Forgot Password
                      
                  .row  
                    .col-md-8.col-md-offset-2
                      p.small Register here to create a QN login and access ALL services provided by Quotidiano.net
                      a.btn.btn-default.btn-outline.btn-block(href=".qn-account-register", role="tab", data-toggle="tab", type="button") Registrati


        .qn-account-register.qn.modal.fade
            .modal-dialog
              .modal-content
                .modal-header
                  a.close.back(type='button', data-toggle='tab', aria-label='Close', href=".qn-account")
                    span(aria-hidden='true')
                      .icon.icon-angle-left
                .modal-body
                  .container-fluid
                    .row.nomargin
                      .col-md-6
                        h2 
                          img.testata-logo.small(src="{{STATIC_URL}}/img/logo.svg", onerror="this.src='{{STATIC_URL}}/img/logo.png'")
                      .col-md-6
                        h2 
                          img.testata-logo.small(src="{{STATIC_URL}}/img/qn_white.svg", onerror="this.src='{{STATIC_URL}}/img/qn_white.png'")
                    .row
                      .col-md-12
                        p.quiet Registrati su Quotidiano.net
                    .row
                      .col-md-8.col-md-offset-2
                        p Here is the area for messages and errors.
                        form
                          .form-group
                            label.sr-only(for='') Email address
                            input#exampleInputEmail1.form-control(type='email', placeholder='Enter email')
                          .form-group
                            label.sr-only(for='') Password
                            input#exampleInputPassword1.form-control(type='password', placeholder='Password')
                          .form-group
                            label.sr-only(for='') Password Again
                            input#exampleInputPassword1.form-control(type='password', placeholder='Password')
                          .form-group
                            label.sr-only(for='') Sesso
                            input#exampleInputPassword1.form-control(type='password', placeholder='Sesso')
                          .form-group
                            label.sr-only(for='') Provincia
                            input#exampleInputPassword1.form-control(type='password', placeholder='Provincia')

                          .form-group
                            label(for='') Data di nascita
                            input#exampleInputPassword1.form-control(type='password', placeholder='Password')
                            p.help-class Questo nome verrà visualizzato pubblicamente.

                          .form-group
                            label(for='') Display name for the QN Network
                            input#exampleInputPassword1.form-control(type='password', placeholder='Displayname')
                            p.help-class Questo nome verrà visualizzato pubblicamente.

                          .checkbox
                            label
                              input(type='checkbox') 
                              | Ho letto e accetto Info Privacy

                          .form-group
                            button.btn.btn-primary.btn-block(type='submit', href="/account", value="Registrati") Registrati
                        
                    .row  
                      .col-md-8.col-md-offset-2
                        p.small Already a member of QN?
                        a.btn.btn-default.btn-outline.btn-block(type="button", data-toggle="tab", role="tab", href=".qn-account") Login
