doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')          
    
    block title
      title Inedicola

    block styles
      link(rel='stylesheet/less', href='static/styles.less')

    block scripts
      script(src='static/js/less.min.js', type='text/javascript')
      script(src='static/js/jquery-1.11.3.min.js', type='text/javascript')
      script(src='static/js/bootstrap.min.js', type='text/javascript')
      

  body
    .container
      block navbar
        // Static navbar
        .navbar.navbar-inverse.navbar-transparent(role='navigation')
          .container
            .navbar-header
              a.navbar-brand(href='/')
                img(src="{{STATIC_URL}}/img/logo.svg")
            .navbar-collapse.collapse
              ul.nav.navbar-nav.navbar-right
                li
                  a.btn.btn-outline(href='/account') Accedi
            // /.nav-collapse
        // /container    
    
    block main
      h1.title Index (default)
      #container
        if name
          p Hello #{name}
        else
          p Hello World

    .container
      block footer
          .footer
            ol.breadcrumb
              li
                a(href="assistenza") Assistenza & Faq
              li
                a(href="azienda") Aziende
              li
                a(href="guida") Guida
              li
                btn.btn.btn-primary(type="button", data-toggle="modal", data-target=".qn-account") Modal

    .qn-account.modal.fade
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') ×
              h4.modal-title Modal title
            .modal-body
              p One fine body…
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button.btn.btn-primary(type='button') Save changes
          // /.modal-content
        // /.modal-dialog
      // /.modal
